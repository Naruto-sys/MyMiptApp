<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/subject_card1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            app:cardBackgroundColor="#0148FA"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/physics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="75dp"
                android:text="Physics"
                android:textColor="@color/colorText" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/subject_card2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/colorText"
            app:cardCornerRadius="10dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/maths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="75dp"
                android:text="Maths"
                android:textColor="@color/colorBlack" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/subject_card3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginStart="40dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/colorText"
            app:cardCornerRadius="10dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/astronomy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="75dp"
                android:text="Astronomy"
                android:textColor="@color/colorBlack" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/home_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Домашние задания"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="на сегодня"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toEndOf="@+id/home_tasks"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/note_card1"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today">

        <TextView
            android:id="@+id/type_of_note1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Домашка:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/find_rectangle"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="false"
            android:layout_marginTop="0dp"
            android:background="@drawable/blue_rectangle" />

        <TextView
            android:id="@+id/desc_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="12dp"
            android:text="по Физике"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Из предложенных нарисованных частей,  соберите ваше устройство. Все элементы  приклейте на отчетном листе .  Заполните бланк с отчетом (см. приложение 2).  "
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/note_card2"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_card1">

        <TextView
            android:id="@+id/type_of_note2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Домашка:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="false"
            android:layout_marginTop="0dp"
            android:background="@drawable/blue_rectangle" />

        <TextView
            android:id="@+id/desc_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="12dp"
            android:text="по Физике"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Написать решение для темы “ Цепи и их связи” "
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/home_tasks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Домашние задания"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_card2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/note_card3"
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/february">

        <TextView
            android:id="@+id/type_of_note3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Домашка:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="false"
            android:layout_marginTop="0dp"
            android:background="@drawable/blue_rectangle" />

        <TextView
            android:id="@+id/desc_small3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="12dp"
            android:text="по Физике"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Написать сочинение на тему “Морфология и ее разделы“. Доделать упражнение  №345"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/note_card4"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_card3">

        <TextView
            android:id="@+id/type_of_note4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Домашка:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/rectangle_4"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="false"
            android:layout_marginTop="0dp"
            android:background="@drawable/blue_rectangle" />

        <TextView
            android:id="@+id/desc_small4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="12dp"
            android:text="По физике"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/description4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Из предложенных нарисованных частей,  соберите ваше устройство. Все элементы  приклейте на отчетном листе .  Заполните бланк с отчетом (см. приложение 2).  "
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/february"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:text="28.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toEndOf="@+id/home_tasks"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>